@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    ViewData[@Model.ToastrMessage] = @Model.StatusMessage;
}

<!-- Horizontal Form -->
<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form class="form-horizontal" id="profile-form" method="post">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Username" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Username" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Input.PhoneNumber" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone number" aria-required="true" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Input.FirstName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.FirstName" class="form-control" placeholder="First name" aria-required="true" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                 <div class="form-group row">
                    <label asp-for="Input.LastName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.LastName" class="form-control" placeholder="Last name" aria-required="true" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Change password</button>
            </div>
            <!-- /.card-footer -->
        </form>
    </div>
</div>

@section Scripts {    
    <partial name="_ValidationScriptsPartial" />
}
