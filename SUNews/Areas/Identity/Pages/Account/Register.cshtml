@page
@model RegisterModel

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url(@Url.Content("~/img/bg_1.jpg")"></div>
        <div class="contents order-2 order-md-1">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <div class="mb-4">
                            <h3>Create new account</h3>
                        </div>
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            <div class="form-group last mb-3">
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <input asp-for="Input.Email" autocomplete="username" aria-required="true" type="text" class="form-control" id="username" />
                            </div>
                            <div class="form-group last mb-3">
                                <label asp-for="Input.FirstName" class="form-label">First name</label>
                                <input asp-for="Input.FirstName" autocomplete="firstname" aria-required="true" type="text" class="form-control" id="firstname" />
                            </div>
                            <div class="form-group last mb-3">
                                <label asp-for="Input.LastName" class="form-label">Last name</label>
                                <input asp-for="Input.LastName" autocomplete="lastname" aria-required="true" type="text" class="form-control" id="lastname" />
                            </div>
                            <div class="form-group last mb-3">
                                <label asp-for="Input.Password" class="form-label" for="password">Password</label>
                                <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" type="password" class="form-control" id="password">
                            </div>
                            <div class="form-group last mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label" for="password">ConfirmPassword</label>
                                <input asp-for="Input.ConfirmPassword" autocomplete="current-password" aria-required="true" type="password" class="form-control" id="confirmpassword">
                            </div>

                            <input type="submit" value="Register" class="btn btn-block btn-primary">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/plugins/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/plugins/jquery/popper.min.js"></script>
    <script src="~/plugins/jquery/bootstrap.min.js"></script>
    <script src="~/plugins/jquery/main.js"></script>
</body>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}