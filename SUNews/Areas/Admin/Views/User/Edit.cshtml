@model UserEditViewModel

<!-- Horizontal Form -->
<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Profile</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post">
            <div class="card-body">
                <div class="form-group row">
                    <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="UserName" type="text" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PhoneNumber" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone number" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="First name" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Last name" disabled />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Roles"></label><br />
                        <select asp-for="@Model.Roles" class="js-example-basic-multiple" name="states[]" size=4 multiple="multiple" name="Roles" asp-items="Model.RolesList" aria-label="multiple select example" style="width: 100%;"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" placeholder="Email" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="LockoutEnd" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="LockoutEnd" class="form-control" placeholder="LockoutEnd" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button asp-route-id="@Model.Id" type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        <!-- /.card-body -->
    </div>
</div>

@section scripts {
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js"></script>
<partial name="_ValidationScriptsPartial" />
}