@model CommentServiceModel

<td>
    <a>
        @Model.Text
    </a>
</td>
<td>
    <ul class="list-inline text-center">
        <li class="list-inline-item">
            @Model.DateOfCreation
        </li>
    </ul>
</td>
<td class="project-state">
    <span class="text-center">@Model.UserName</span>
</td>
<td class="project-actions text-right">
    <form asp-area="Admin" asp-controller="Comment" asp-action="DeleteReport" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-info btn-sm">
            <i class="fas fa-exclamation-circle"></i> Delete Report
        </button>
    </form>
    <br />
    <form asp-area="Admin" asp-controller="Comment" asp-action="DeleteComment" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger btn-sm">
            <i class="fas fa-comment-alt"></i> Delete Comment
        </button>
    </form>
</td>
