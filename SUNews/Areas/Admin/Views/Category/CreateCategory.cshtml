@model CreateCategoryViewModel

<form asp-area="Admin" asp-controller="Category" asp-action="CreateCategory" method="post">
    <div class="col-md-6" id="CreateCategoryForm">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Create Category</h3>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="CategoryName"></label>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-align-justify"></i></span>
                    </div>
                    <input asp-for="CategoryName" type="text" class="form-control" placeholder="Category name">
                </div>

                <div class="row">
                    <div class="col-lg-6">
                    </div>
                    <!-- /.col-lg-6 -->
                    <div class="col-lg-6">
                    </div>
                    <!-- /.col-lg-6 -->
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-info float-right">Create</button>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
</form>

@section scripts {
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js"></script>
<partial name="_ValidationScriptsPartial" />
}