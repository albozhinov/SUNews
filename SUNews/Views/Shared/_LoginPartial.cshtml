@using Microsoft.AspNetCore.Identity
@using SUNews.Data.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <i class="fas fa-door-open"></i>
                <button type="submit" class="nav-link btn btn-link text-dark">Log Out</button>
            </form>
        </li>
    }
    else
    {
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Register">
            <i class="fas fa-user"></i>
            <button type="submit" class="nav-link btn btn-link text-dark">Register</button>
        </form>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-sign-in-alt"></i>
            <button type="submit" class="nav-link btn btn-link text-dark">Login</button>
        </form>
    }
</ul>