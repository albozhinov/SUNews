@model CategoriesAndArticlesViewModel

<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Categories</h1>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">

        <partial name="_CategoryPartial" model="@Model.Categories" />

        <!-- /.col -->
        <div class="col-md-9">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    @if (String.IsNullOrEmpty(@Model.ChoosenCategory))
                    {
                        <h3 class="card-title">Articles by category</h3>
                    }
                    else
                    {
                        <h3 class="card-title">Articles by category - "@Model.ChoosenCategory"</h3>
                    }

                    @*<div class="card-tools">
                        <div class="input-group input-group-sm">
                        <input type="text" class="form-control" placeholder="Search Mail">
                        <div class="input-group-append">
                        <div class="btn btn-primary">
                        <i class="fas fa-search"></i>
                        </div>
                        </div>
                        </div>
                        </div>
                        <!-- /.card-tools -->*@
                </div>
                <!-- /.card-header -->
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 13%">
                                    #
                                </th>
                                <th style="width: 18%">
                                    Link
                                </th>
                                <th style="width: 35%">
                                    Author
                                </th>
                                <th style="width: 30%">
                                    Title
                                </th>
                            </tr>
                        </thead>
                    </table>
                    <div class="table-responsive mailbox-messages">
                        <table class="table table-hover table-striped">
                            <tbody id="content">
                                @if (@Model.Articles != null)
                                {
                                    <partial name="_CategoryArticleGrid" model="@Model.Articles" />
                                }
                            </tbody>
                        </table>
                        <!-- /.table -->
                    </div>
                    <!-- /.mail-box-messages -->
                </div>
                <!-- /.card-body -->
                <div class="card-footer p-0">
                    <div class="mailbox-controls">
                        <!-- Check all button -->
                        <!-- /.btn-group -->

                        <div class="float-right">
                            <div class="btn-group">

                                @*Here we can include pagination buttons!!!*@

                            </div>
                            <!-- /.btn-group -->
                        </div>
                        <!-- /.float-right -->
                    </div>
                </div>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->


@section Scripts{
<script>
    $(document).on("click", "#getCategoryArticles a", function () {
        $.ajax({
            url: $(this).attr("href"),
            type: 'GET',
            cache: false,
            success: function (result) {
                $('#content').html(result);
            }
        });
        return false;
    });
</script>
}