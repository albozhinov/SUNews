@model CreateArticleViewModel

<h3>Create Article</h3>
<form asp-area="" asp-controller="Article" asp-action="CreateArticle" method="post">
    <div class="mb-3">
        <label asp-for="Title"></label><br />
        <input asp-for="Title" class="form-control">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label><br />
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    @{
        if (Model.CategoriesList == null || Model.CategoriesList.Count() == 0)
        {
            <div>
                <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="CreateCategory" role="button">Create Category</a>
            </div>
            <br />
        }
        else
        {
            <div class="container">
                <div class="row">
                    <div class="col">
                        <label asp-for="Categories"></label><br />
                        <select asp-for="Categories" class="form-select" size=3 multiple name="Categories" asp-items="Model.CategoriesList" aria-label="multiple select example"></select>
                    </div>
                    <div class="col row align-items-center">
                        <div>
                            <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="CreateCategory" role="button">Create Category</a>
                        </div>
                    </div>
                </div>
            </div>
            <br>
        }
    }
    <div class="container">
        <div class="row">
            <div class="col row align-items-center">
                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label><br />
                    <input asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row align-items-start">
            <div class="col">
                <label asp-for="AuthorName" class="form-label"></label><br />
                <input asp-for="AuthorName" class="form-control">
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="col">
            </div>
            <div class="col">
            </div>
        </div>
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section scripts {
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js"></script>
<partial name="_ValidationScriptsPartial" />
}